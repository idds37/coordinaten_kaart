<body>

<div id="map"></div>

<div id="searchContainer">
  <input id="searchInput" type="text" placeholder="ðŸ” Zoek op adres of bedrijf..." />
</div>

<div id="panel">
  <div class="coord-row">
    <label for="lng">X (Longitude):</label>
    <input type="text" id="lng" readonly />
    <button onclick="copyToClipboard('lng')">ðŸ“‹ Kopieer X</button>
  </div>
  <div class="coord-row">
    <label for="lat">Y (Latitude):</label>
    <input type="text" id="lat" readonly />
    <button onclick="copyToClipboard('lat')">ðŸ“‹ Kopieer Y</button>
  </div>
</div>

<script>
  let map;
  let marker;

  function initMap() {
    const startLocation = { lat: 52.3702, lng: 4.8952 }; // Amsterdam

    map = new google.maps.Map(document.getElementById("map"), {
      center: startLocation,
      zoom: 13,
    });

    const input = document.getElementById("searchInput");
    const autocomplete = new google.maps.places.Autocomplete(input);
    autocomplete.bindTo("bounds", map);

    autocomplete.addListener("place_changed", () => {
      const place = autocomplete.getPlace();
      if (!place.geometry) return;

      const location = place.geometry.location;
      setMarker(location.lat(), location.lng());
      map.panTo(location);
      map.setZoom(16);
    });

    map.addListener("click", (e) => {
      setMarker(e.latLng.lat(), e.latLng.lng());
    });
  }

  function setMarker(lat, lng) {
    document.getElementById("lat").value = lat.toFixed(6);
    document.getElementById("lng").value = lng.toFixed(6);

    const position = { lat, lng };

    if (!marker) {
      marker = new google.maps.Marker({
        position,
        map,
      });
    } else {
      marker.setPosition(position);
    }
  }

  function copyToClipboard(id) {
    const input = document.getElementById(id);
    input.select();
    input.setSelectionRange(0, 99999);
    document.execCommand("copy");
    alert(`Gekopieerd: ${input.value}`);
  }
</script>

<script
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAuvZr3pWBeoo_FnVL2BmbpAMiDMaC0Ha8&libraries=places&callback=initMap"
  async
  defer
></script>

